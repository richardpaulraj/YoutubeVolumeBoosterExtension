{
  "name": "Volume Booster for YouTube",
  "description": "Boosts the volume of your YouTube videos upto 4x of the full volume",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "scripting"],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "backgroundScript.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "homepage_url": "https://github.com/richardpaulraj/YoutubeVolumeBoosterExtension",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
